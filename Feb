    />

    <h1 id="question">
      Hey Ayeshuu, you know you are the best, smartest, and the hottest person I know.  
      As Feb is the month of Love and I see my lady is feeling low,  
      I would like to throw a question to you:  
      <br><br>
      <strong>Can we meet in this month of love as many times as we can? üíï</strong>
    </h1>

    <div class="buttons" id="buttons">
      <button id="yesBtn" onclick="yesClicked()">Yes</button>
      <button id="noBtn" onclick="noClicked()">No</button>
    </div>
  </div>

  <script>
    const messages = [
      "Sure?",
      "You are sure?",
      "You really sure?",
      "Seriously it‚Äôs a No?",
      "Seriously?"
    ];

    let noCount = 0;

    function noClicked() {
      const question = document.getElementById("question");
      const yesBtn = document.getElementById("yesBtn");
      const noBtn = document.getElementById("noBtn");

      if (noCount < messages.length) {
        question.innerText = messages[noCount];

        yesBtn.style.transform = `scale(${1 + noCount * 0.25})`;
        noBtn.style.transform = `scale(${1 - noCount * 0.2})`;

        noCount++;
      } else {
        // Fade out No button
        noBtn.style.opacity = "0";
        noBtn.style.pointerEvents = "none";

        // Make Yes the only focus
        yesBtn.style.transform = "scale(1.8)";
      }
    }

    function yesClicked() {
      document.querySelector(".card").innerHTML = `
        <img 
          src="https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif" 
          style="width:180px; border-radius:12px; margin-bottom:20px;"
        />
        <h1>It‚Äôs a YES üíñ</h1>
        <p>Now tell me the dates already üòè‚ú®</p>
      `;
    }
  </script>

